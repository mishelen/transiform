extends templates/_container


block title
    title Главная


block article
    article
        #intro.container-wrapper
            .container-fluid
                h1.heading Груз это только повод
                p.lead Повод для того что бы перепоручить нам и расслабиться
                div.intro__image
                    include images/city_with_rail.svg
                //ul
                //    li Полная адаптация продукта под&nbsp;бизнес-процессы заказчика
                //    li Сопровождение в&nbsp;течение всего жизненного цикла программного обеспечения
